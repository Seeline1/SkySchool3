<Page x:Class="SkySchool3.Pages.PageInfoGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SkySchool3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="779" d:DesignWidth="1006"
      Title="PageInfoGroup" IsVisibleChanged="Page_IsVisibleChanged">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="750" Width="1000">
        <TextBlock Text="Группы" FontSize="50" Margin="324,162,324,518"></TextBlock>
        <Button x:Name="BtnAdd" Content="Добавить" Margin="230,639,540,51" Click="BtnAdd_Click" ></Button>
        <Button x:Name="BtnDel" Content="Удалить" Margin="540,639,230,51" Click="BtnDel_Click" ></Button>
        <Image Visibility="Visible" Width="60" Height="60" x:Name="ImgHome" ToolTip="Профиль" Stretch="Fill" Margin="798,30,142,660" Source="/SkySchool3;component/Resources/Home.png" MouseDown="ImgHome_MouseDown" />
        <DataGrid FontSize="17" x:Name="DGridGroups" AutoGenerateColumns="False" IsReadOnly="True" FontFamily="Comic Sans MS" Margin="60,262,60,128" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding Group_Number}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
